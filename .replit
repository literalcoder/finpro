modules = ["php-8.2", "php-8.4"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["sqlite", "mysql84"]

[workflows]
runButton = "Setup and Run"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PHP Server"

[[workflows.workflow]]
name = "PHP Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mysql && mysql_install_db --datadir=/tmp/mysql --user=$(whoami) && mysqld_safe --datadir=/tmp/mysql --socket=/tmp/mysql.sock --port=3306 --skip-networking &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock -e 'CREATE DATABASE IF NOT EXISTS origfinpro;'"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock origfinpro < origfinpro/init_mysql_schema.sql"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t origfinpro"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Start MySQL Server"
author = 47641685
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mysql"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mariadb-install-db --datadir=/tmp/mysql --user=$(whoami)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysqld_safe --datadir=/tmp/mysql --socket=/tmp/mysql.sock --port=3306 &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 5"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock -e \"CREATE DATABASE IF NOT EXISTS origfinpro;\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock origfinpro < origfinpro/init_mysql_schema.sql"

[[workflows.workflow]]
name = "Setup and Run"
author = 47641685
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mkdir -p /tmp/mysql"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysqld --initialize-insecure --datadir=/tmp/mysql --user=$(whoami)"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysqld --datadir=/tmp/mysql --socket=/tmp/mysql.sock --port=3306 --skip-networking --pid-file=/tmp/mysql.pid &"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 10"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock -e \"CREATE DATABASE IF NOT EXISTS origfinpro;\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mysql -S /tmp/mysql.sock origfinpro < init_mysql_schema.sql"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t origfinpro"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["php", "-S", "0.0.0.0:5000", "-t", "origfinpro"]
